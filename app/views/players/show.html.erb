<%- model_class = Player -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

  <div class="pull-right">
    <% if @player.vk %>
      <a target="_blank" href="https://vk.com/<%= @player.vk %>"><%= image_tag 'habrapack/with_shadow/vk.png' %></a>
    <% end %>
    <% if @player.gplus %>
      <a target="_blank" href="https://plus.google.com/<%= @player.gplus %>"><%= image_tag 'habrapack/with_shadow/google_plus.png' %></a>
    <% end %>
  </div>
  
<h2 class="<%= @player.fraction == 'ALIENS' ? 'text-success' : 'text-info' %>">
  <%= @player.name %>
  <% if @player.level > 1 %>
    (<%= @player.level %>)
  <% end %>
  <% if @player.realname %>
    <sup>[<%= @player.realname %>]</sup>
  <% end %>
</h2>


  <% if can? :statistic, Player %>
    <%= link_to t('.edit', :default => t("helpers.links.activity")),
              action_path(@player.id), :class => 'btn btn-primary' %>
  <% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @player.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @player.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transport) %>:</strong></dt>
  <dd><%= @player.transport %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comments) %>:</strong></dt>
  <dd><%= @player.comments %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              players_path, :class => 'btn'  %>
  <% if can? :manage, Player %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_player_path(@player), :class => 'btn' %>
  <% end %>
</div>
